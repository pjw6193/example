package dayfour;

public class SingletonConcurrencyIssue {

}

class Singleton {
	// constant (static final) - ALL_CAPS_NAMING
	private static Singleton INSTANCE = null;
	
	// no one can create an object
	private Singleton() {
		
	}
		
	public static Singleton getInstance() {
		if(INSTANCE == null) {
			INSTANCE = new Singleton();
			return INSTANCE;
		}else {
			return INSTANCE;
		}
	}
}